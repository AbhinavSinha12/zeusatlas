<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="Zeus.ActionSet"
            label="Zeus Actions"
            visible="true"
	        description="">
        <action id="Zeus.Run"
           	  label="Run Query"
 	          toolbarPath="org.eclipse.ui.workbench.file/new.ext"
	          icon="icons/ZeusIcon.PNG"
	          tooltip="Runs the JavaScript Query for Atlas"
	          class="cpre492.sdmay1020.plugin.zeus.ZeusRunButtonAction">
	    </action>
      </actionSet>
   </extension>
     <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="cpre492.sdmay1020.plugin.zeus.OpenHandler"
            id="Zeus.Open"
            name="Open">
      </command>
      <command
            defaultHandler="cpre492.sdmay1020.plugin.zeus.RunHandler"
            id="Zeus.Run"
            name="Run">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="zeusMenu"
               label="Zeus">
            <command
                  commandId="Zeus.Open"
                  label="Open"
                  style="push"
                  tooltip="Open a Query Script">
            </command>
            <command
                  commandId="Zeus.Run"
                  label="Run"
                  style="push"
                  tooltip="Run the Query Script">
            </command>
         </menu>
      </menuContribution>
   </extension>
</plugin>
